# File: docker/.env.example
# Environment variables for postgres-polaris Docker setup
# Copy to .env and modify as needed

# PostgreSQL Configuration
POSTGRES_DB=polaris
POSTGRES_USER=polaris_admin
POSTGRES_PASSWORD=polaris_secure_2024
POSTGRES_PORT=5432

# UI Ports
ADMINER_PORT=8080
PGADMIN_PORT=8081

# pgAdmin Configuration
PGLADMIN_EMAIL=admin@polaris.local
PGADMIN_PASSWORD=admin123

# Development/Production Settings
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=en_US.UTF-8
POSTGRES_HOST_AUTH_METHOD=md5

# Optional: Custom PostgreSQL configuration
# POSTGRES_CONFIG_FILE=/etc/postgresql/postgresql.conf
# POSTGRES_HBA_FILE=/etc/postgresql/pg_hba.conf
