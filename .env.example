# PostgreSQL Polaris - Top-level Environment Configuration
# Location: /.env.example
# Copy to .env and customize as needed

# Project Configuration
PROJECT_NAME=postgres-polaris
ENVIRONMENT=development

# Database Connection (for scripts and external tools)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=polaris
POSTGRES_USER=polaris
POSTGRES_PASSWORD=polar_star_2024

# Admin UI Ports (override docker/.env if needed)
ADMINER_PORT=8080
PGADMIN_PORT=8081

# Development Settings
DEBUG=true
VERBOSE_LOGGING=false

# Data Generation Settings
CITIZENS_COUNT=10000
MERCHANTS_COUNT=500
TRIPS_COUNT=50000
GEOSPATIAL_PRECISION=6

# Performance Testing
BENCHMARK_ITERATIONS=3
QUERY_TIMEOUT=30000

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_DIRECTORY=./backups

# Module Execution Settings
AUTO_ROLLBACK=false
CONTINUE_ON_ERROR=false

# External Tool Integration (optional)
# GRAFANA_PORT=3000
# PGBOUNCER_PORT=6432
